<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/card_img_search"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/card_title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/card_img_search"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/card_heartIcon_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart_icon"
            android:layout_toRightOf="@+id/card_img_search"
            android:layout_below="@+id/card_title_search"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/card_numberOfLikes_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_heartIcon_search"
            android:layout_below="@+id/card_title_search"
            android:text="0000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>