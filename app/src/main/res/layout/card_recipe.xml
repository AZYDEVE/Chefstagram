<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_marginHorizontal="8dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_recipe_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/recipe_card_creator_pic"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/card_recipe_title"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_recipe_image"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:gravity="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recipe_card_creator_pic"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/chef"
            android:layout_marginVertical="4dp"
            />

        <TextView
            android:id="@+id/card_recipe_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recipe_card_creator_pic"
            android:layout_marginStart="2dp"
            android:layout_marginVertical="4dp"
            android:textSize="12sp"
            android:clickable="true"
            android:text="Creator"/>


        <ImageView
            android:id="@+id/card_heart_icon"
            android:layout_marginTop="4dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/heart_icon" />

        <TextView
            android:id="@+id/card_numberOfLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toStartOf="@+id/card_heart_icon"
            android:layout_margin="3dp"
            android:text="0" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>